{
    "display_information": {
        "name": "Bolt JS Slack Connect",
        "description": "Streamline administration of Slack Connect Channels via APIs.",
        "background_color": "#ccff66"
    },
    "features": {
        "app_home": {
            "home_tab_enabled": true,
            "messages_tab_enabled": true,
            "messages_tab_read_only_enabled": false
        },
        "bot_user": {
            "display_name": "Bolt JS Slack Connect",
            "always_online": true
        }
    },
    "oauth_config": {
        "redirect_urls": [
            "https://99b5-2601-646-4380-66e0-4da4-9994-1e86-2e5b.ngrok.io/slack/oauth_redirect"
        ],
        "scopes": {
            "user": [
                "admin.conversations:write"
            ],
            "bot": [
                "channels:history",
                "channels:manage",
                "conversations.connect:manage",
                "conversations.connect:read",
                "conversations.connect:write",
                "remote_files:write",
                "users:read",
                "users:read.email"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "request_url": "https://99b5-2601-646-4380-66e0-4da4-9994-1e86-2e5b.ngrok.io/slack/events",
            "bot_events": [
                "app_home_opened",
                "message.channels",
                "shared_channel_invite_accepted",
                "shared_channel_invite_approved",
                "shared_channel_invite_declined",
                "shared_channel_invite_received"
            ]
        },
        "interactivity": {
            "is_enabled": true,
            "request_url": "https://99b5-2601-646-4380-66e0-4da4-9994-1e86-2e5b.ngrok.io/slack/events"
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": false,
        "token_rotation_enabled": false
    }
}